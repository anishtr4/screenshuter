# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/screenshot-saas

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Screenshot Configuration
SCREENSHOT_TIMEOUT=30000
CRAWL_MAX_DEPTH=2
CRAWL_MAX_PAGES=50

# Device scale factor for high-resolution screenshots (1 = normal, 2 = 2x, 3 = 3x)
DEVICE_SCALE_FACTOR=2

# Cookie prevention (true/false) - prevents cookie popups in screenshots
COOKIE_PREVENTION_ENABLED=true

# Anti-Bot Detection Configuration
# Enable stealth mode to bypass bot detection (true/false)
STEALTH_MODE_ENABLED=true

# Human-like behavior simulation (true/false)
HUMAN_BEHAVIOR_ENABLED=true

# Random delays for human-like interaction (milliseconds)
MIN_INTERACTION_DELAY=200
MAX_INTERACTION_DELAY=2000

# Navigation timeout with retries (milliseconds)
NAVIGATION_TIMEOUT=60000

# Default Admin User (created on first run)
ADMIN_EMAIL=admin@screenshot-saas.com
ADMIN_PASSWORD=admin123

# Free Tier Defaults
DEFAULT_SCREENSHOTS_PER_MONTH=100
DEFAULT_MAX_PROJECTS=10

# Frontend URL
FRONTEND_URL=http://localhost:5001
