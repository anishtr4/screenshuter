# Production Environment Variables
NODE_ENV=production
PORT=3000

# Database
MONGODB_URI=mongodb://localhost:27017/screenshot_saas

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# File Upload Settings
MAX_FILE_SIZE=50mb
UPLOAD_TIMEOUT=300000

# Screenshot Settings
SCREENSHOT_TIMEOUT=30000
CRAWL_TIMEOUT=30000
CRAWL_MAX_PAGES=50

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10000

# Admin User (will be created if doesn't exist)
ADMIN_EMAIL=admin@screenshot-saas.com
ADMIN_PASSWORD=admin123

# Logging
LOG_LEVEL=info

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Screenshot Configuration
# Device scale factor for high-resolution screenshots (1 = normal, 2 = 2x, 3 = 3x)
DEVICE_SCALE_FACTOR=2

# Cookie prevention (true/false) - prevents cookie popups in screenshots
COOKIE_PREVENTION_ENABLED=true
